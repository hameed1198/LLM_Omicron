# Environment configuration for Omicron Sentiment Analysis
# Copy this file to .env and add your actual API keys

# AI Model API Keys (choose one or more)
# Anthropic API Key for Claude Sonnet
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key for GPT models (also works with GitHub Copilot API)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Other API keys for additional features
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Data file path
CSV_FILE_PATH=omicron_2025.csv

# Model configurations
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_PROVIDER=auto  # Options: "claude", "openai", "ollama", "auto"
LLM_TEMPERATURE=0.1

# Vector store configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=10
